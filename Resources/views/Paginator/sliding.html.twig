<nav>
{% if pageCount > 1 %}
    <ul class="pagination pagination-sm">

    {% if first is defined and current != first %}
        <li class="page-item">
        <span class="first">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}"><i class="fa fa-fast-backward"></i>
</a>
        </span>
        </li>
    {% endif %}

    {% if previous is defined %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}"><i class="fa fa-caret-left"></i>
</a>
        </li>
    {% else %}
        <li class="page-item disabled">
            <span class="page-link"><i class="fa fa-caret-left"></i></span>
        </li>
    {% endif %}

    {% if startPage > 1 %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
        </li>
        {% if startPage == 3 %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
            </li>
        {% elseif startPage != 2 %}
        <li class="page-item disabled">
            <span>&hellip;</span>
        </li>
        {% endif %}
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </li>
        {% else %}
            <li class="page-item active ">
                <span class="page-link">{{ page }} <span class="sr-only">(current)</span></span>
            </li>
        {% endif %}

    {% endfor %}

    {% if pageCount > endPage %}
        {% if pageCount > (endPage + 1) %}
            {% if pageCount > (endPage + 2) %}
                <li class="page-item disabled">
                    <span>&hellip;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                </li>
            {% endif %}
        {% endif %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
        </li>
    {% endif %}

    {% if next is defined %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}"><i class="fa fa-caret-right"></i>
</a>
        </li>
    {% else %}
        <li class="page-item disabled">
            <span class="page-link"><i class="fa fa-caret-right"></i></span>
        </li>
    {% endif %}

    {% if last is defined and current != last %}
        <li class="page-item">
        <span class="last">
            <a class="page-link"  href="{{ path(route, query|merge({(pageParameterName): last})) }}"><i class="fa fa-fast-forward"></i>
</a>
        </span>
        </li>
    {% endif %}
    </ul>
{% endif %}
</nav>