{% set routeTitle %}route.{{route}}.title{% endset %}
<div class="{{ class }}">
  <div id="{{id}}-pane" data-url={{path(route) }} class="panel {{ paneClass | default('') }} panel-me-lazy" >
    <div class="panel-heading">
      <strong>{{routeTitle|trans}}</strong>
      {{counter_me(id)}}
      <div class="btn-group btn-group-sm pull-right ">
        {{ submenu | default('') }}
        <button id="{{id}}-refresh" class="btn btn-lazy-refresh" data-target='#{{id}}-pane'><i class="fa fa-refresh"></i></button>
      </div>
    </div>
    <div id="{{id}}-pane-body" class="panel-body panel-sidebar"></div>
    <div id="{{id}}-pane-alt" class="panel-content-alt"></div>
    <div class="clearfix"></div>
    <div class="pane-footer text-right">
      <a href="{{ path(route) }}" class="text-muted ">{{'action.show_all'|trans}}</a>
    </div>
  </div>
</div>
<script>
  $.lazy.load($('{{'#'~id}}-pane'));
</script>