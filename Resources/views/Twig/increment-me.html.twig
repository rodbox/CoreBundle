<div class="input-group input-group-increment">
      <span class="input-group-btn">
        <button class="btn btn-sm btn-increment" data-value="-{{ increment }}" type="button"><i class="fa fa-minus"></i></button>
      </span>
      <input type="text" id="{{ id }}" value="{{ value }}" name="{{ name }}" class="increment-me {{ class }}" {{ attr-me(attr | default({})) }}>
      <span class="input-group-btn">
        <button class="btn btn btn-sm btn-increment" data-value="{{ increment }}" type="button"><i class="fa fa-plus"></i></button>
      </span>
</div>