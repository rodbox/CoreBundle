<div class="input-group input-group-increment">
      <span class="input-group-btn">
        <button class="btn btn-sm btn-increment btn-increment-minus" data-increment="{{ increment }}" type="button"><i class="fa fa-minus"></i></button>
      </span>
      <input type="text" id="{{ id }}" value="{{ value }}" name="{{ name }}" data-increment="{{ increment }}" class="increment-me form-control {{ class }}" {{ attr_me(attr | default({})) }}>
      <span class="input-group-btn">
        <button class="btn btn btn-sm btn-increment btn-increment-plus" data-increment="{{ increment }}" type="button"><i class="fa fa-plus"></i></button>
      </span>
</div>