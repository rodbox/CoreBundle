<div class="table-responsive">
	<table id="table-me-{{ name }}" data-resizable-columns-id="table-me-{{ name }}" class="table table-sm table-striped table-bordered table-arr table-me">
		<thead>
			<tr>
				<th></th>
				{% for keyCol, col in data[0] %}
					<th class="col-{{ keyCol }}" data-col="{{ keyCol }}" data-resizable-column-id="{{ keyCol }}" >
						<input id="col-{{ keyCol }}" type="checkbox" name="title[{{ keyCol }}]" class="check-col" data-col="{{ keyCol }}" value="{{ keyCol }}">
						<label for="">{{ keyCol }}</label>
					</th>
				{% endfor %}
			</tr>
		</thead>
		<tbody>
			{% for keyRow, row in data %}
				<tr>
					<td>
						<input id="row-{{ keyRow }}" type="checkbox" name="value[{{ keyRow }}]" class="check-row" data-row="{{ keyRow }}" value="{{ keyRow }}">
						<label for="">{{ keyRow }}</label>
					</td>
					{% for keyCol, col in row %}
					<td class="row-{{ keyRow }} col-{{ keyCol }}" data-row="{{ keyRow }}" data-col="{{ keyCol }}" ><input type="text" name="ceil[{{ keyRow }}][{{ keyCol }}]" value="{{ col }}" class="table-ceil-edit form-control input-row-{{ keyRow }} input-col-{{ keyCol }}" data-value="{{ col }}" readonly /></td>
					{% endfor %}
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

<script>
$(function(){
  $("table.table-me").resizableColumns({
    store: window.store
  });
});
</script>