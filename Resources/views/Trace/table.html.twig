{% extends app.request.isxmlhttprequest ? '::base.html.twig' : 'AdminBundle::index.html.twig' %}
{% block body %}
<div class="col-md-12 col-lg-12 ">
    <div class="panel panel-default panel-index">
         <form action="#" id="product-list" class="batch-form">
            <table class="records_list table table-sm">
                <thead class="thead-inverse">
                    <tr class="sc-1">
                    	<th>{{ "label.ref" | trans }}</th>
        				<th>{{ "label.message" | trans }}</th>
        				<th>{{ "label.date" | trans }}</th>
        				<th>{{ "label.user" | trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for trace in traces %}
                    <tr id="trace-{{ trace.id }}" class="trace-{{ trace.ref }}">
                     	<td><span class="label label-default label-{{ trace.ref }}">{{ trace.ref }}</span></td>
                		<td><strong>{{ trace.msg }}</strong></td>
                		<td><span data-time="{{ trace.date | date('U') }}">  <span class="small">{{ trace.date | date('d-m-Y')}}</span> <span class="strong">{{ trace.date | date('H:i:s')}}</span></span></td>
                		<td>{{ trace.user }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </form>
    </div>
</div>
{% endblock %}